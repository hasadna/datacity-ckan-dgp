                    "type": "enum",
                    "options": ["__CKAN_INSTANCES__"]
                },
                {
                    "name": "target_package_id",
                    "display": "ID of Package to Update (or Create)",
                    "type": "text"
                },
                {
                    "name": "target_organization_id",
                    "display": "Owner Organization of created package",
                    "type": "text"
                }
            ]
        },
        {
            "name": "gis_fetcher",
